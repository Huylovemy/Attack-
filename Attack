-- Phần code Attack Aura / Auto Attack
spawn(function()
    while wait() do
        if _G.AutoFarm or _G.AttackAura then -- Kiểm tra điều kiện bật/tắt
            pcall(function()
                local Combat = require(game:GetService("VirtualUser"))
                local GetChildren = game:GetService("Workspace").Enemies:GetChildren()
                
                for i, v in pairs(GetChildren) do
                    -- Kiểm tra khoảng cách giữa người chơi và quái
                    if v:FindFirstChild("Humanoid") and v:FindFirstChild("HumanoidRootPart") and v.Humanoid.Health > 0 then
                        if (v.HumanoidRootPart.Position - game.Players.LocalPlayer.Character.HumanoidRootPart.Position).Magnitude <= 40 then
                            -- Thực hiện hành động click/tấn công
                            game:GetService("VirtualUser"):CaptureController()
                            game:GetService("VirtualUser"):Button1Down(Vector2.new(1280, 672))
                        end
                    end
                end
            end)
        end
    end
end)
